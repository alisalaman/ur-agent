# Production Environment Configuration for Synthetic Agent System
# Copy this file to .env and modify as needed

# Environment
ENVIRONMENT=production

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=ai_agent
DATABASE_USERNAME=ai_agent
DATABASE_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_TEMPERATURE=0.5
LLM_MAX_TOKENS=2000

# Transcript Processing
TRANSCRIPT_DIRECTORY=/app/docs/transcripts
EMBEDDING_DIMENSION=384
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true

# API Configuration
API_RATE_LIMIT=100
ENABLE_CORS=true
CORS_ORIGINS=https://yourdomain.com

# WebSocket Configuration
ENABLE_WEBSOCKET=true
WEBSOCKET_PING_INTERVAL=30
MAX_WEBSOCKET_CONNECTIONS=100

# Security
ENABLE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/synthetic-agent.crt
SSL_KEY_PATH=/etc/ssl/private/synthetic-agent.key
