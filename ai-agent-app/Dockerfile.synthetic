FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY pyproject.toml README.md ./

# Install UV
RUN pip install uv

# Install Python dependencies
RUN uv sync

# Install uvicorn in the uv environment
RUN uv add uvicorn

# Also install uvicorn globally so it's available in PATH
RUN pip install uvicorn

# Copy application code
COPY src/ ./src/
COPY scripts/ ./scripts/

# Make startup scripts executable
RUN chmod +x scripts/startup.sh scripts/startup_production.sh scripts/startup_simple.sh scripts/startup_minimal.sh scripts/startup_production_simple.sh start.sh

# Create necessary directories
RUN mkdir -p /app/logs

# Set environment variables
ENV PYTHONPATH=/app/src
ENV PYTHONUNBUFFERED=1

# Expose ports (8000 for local, 10000 for Render)
EXPOSE 8000 10000

# Health check (use PORT env var or default to 10000 for Render)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:${PORT:-10000}/health || exit 1

# No default CMD - the startCommand in render.yaml will be used
